---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio profesional" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--font-family: 'Inter', system-ui, sans-serif;
	}
	
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	
	html {
		font-family: var(--font-family);
		background: #ffffff;
		scroll-behavior: smooth;
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
	}
	.button {
	background-color: #1a73e8; /* Color de fondo */
	color: white; /* Color del texto */
	padding: 0.6rem 1.2rem; /* Espaciado interno */
	border: none; /* Sin borde */
	border-radius: 8px; /* Bordes redondeados */
	text-decoration: none; /* Sin subrayado */
	margin-top: 0.5rem; /* Espaciado superior */
	display: inline-block; /* Para que se comporten como botones */
	font-weight: 600; /* Texto en negrita */
	transition: background-color 0.3s, transform 0.2s; /* Transiciones */
	box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra */
	margin-right: 2rem;
	margin-top: 2rem;
}

.button:hover {
	background-color: #1558b0; /* Color de fondo al pasar el mouse */
	transform: translateY(-2px); /* Efecto de elevación */
	box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15); /* Sombra al pasar el mouse */
}

.button:active {
	transform: translateY(0); /* Sin elevación al hacer clic */
	box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra al hacer clic */
}
</style>