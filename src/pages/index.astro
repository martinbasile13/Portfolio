<style>
	main {
		margin: auto;
		padding: 2rem;
		max-width: 1200px;
		color: #1a1a1a;
		background-color: #ffffff;
	}

	.hero {
		text-align: center;
		padding: 4rem 0;
	}

	h1 {
		font-size: 3rem;
		font-weight: 700;
		margin: 0;
		color: #1a1a1a;
	}

	.title {
		font-size: 1.5rem;
		color: #666;
		margin: 0.5rem 0;
	}

	.description {
		font-size: 1.1rem;
		color: #444;
		max-width: 600px;
		margin: 1rem auto;
	}

	section {
		margin: 4rem 0;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
		color: #1a1a1a;
	}

	.project-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	.project {
		padding: 1.5rem;
		border: 1px solid #eee;
		border-radius: 12px;
		transition: transform 0.2s, box-shadow 0.2s;
		background: white;
	}

	.project:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
	}

	.project-image {
		margin: -1.5rem -1.5rem 1.5rem -1.5rem;
		border-radius: 12px 12px 0 0;
		overflow: hidden;
		aspect-ratio: 16/9;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s;
	}

	.project:hover .project-image img {
		transform: scale(1.05);
	}

	.project h3 {
		margin: 0 0 1rem 0;
		font-size: 1.3rem;
	}

	.project p {
		color: #666;
		margin-bottom: 1rem;
		line-height: 1.5;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.tags span {
		background: #f5f5f5;
		padding: 0.3rem 0.8rem;
		border-radius: 20px;
		font-size: 0.9rem;
		color: #666;
	}

	.skills-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.skill {
		background: #f5f5f5;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		font-size: 1rem;
	}

	.contact-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	.contact-item {
		color: #1a1a1a;
		text-decoration: none;
		font-size: 1.1rem;
		transition: color 0.2s;
	}

	.contact-item:hover {
		color: #666;
	}

	@media (max-width: 1024px) {
		.project-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 2rem 0;
		}

		h1 {
			font-size: 2.5rem;
		}

		.contact-links {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}
	}
</style>